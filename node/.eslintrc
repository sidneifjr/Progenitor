{
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",

    "prettier/prettier": ["error", {
      "endOfLine": "auto",
      "semi": false
    }]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}
